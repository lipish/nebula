# Nebula centralized startup configuration
# Copy to deploy/nebula.env and edit values for your environment.

# Core endpoints
ETCD_ENDPOINT=http://127.0.0.1:2379
ROUTER_PORT=18081
GATEWAY_PORT=8081
BFF_PORT=18090
NODE_PORT=10824

# Node identity/model defaults
NODE_ID=node_gpu0
MODEL_UID=qwen2_5_0_5b
MODEL_NAME=Qwen/Qwen2.5-0.5B-Instruct

# BFF startup toggle in nebula-up.sh
START_BFF=1

# BFF auth persistence (PostgreSQL)
BFF_DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/nebula
# IMPORTANT: keep BFF database independent from observe/xtrace database.
# Seeded default admin (created on first BFF startup):
# username: admin
# password: admin123

# xtrace integration
OBSERVE_URL=http://127.0.0.1:8742
# internal: no auth header first; service: require OBSERVE_TOKEN
OBSERVE_AUTH_MODE=service
OBSERVE_TOKEN=replace-with-api-bearer-token

# Optional: compose profile "observe" runtime settings
OBSERVE_IMAGE=ghcr.io/lipish/xtrace:latest
OBSERVE_DATABASE_URL=postgresql://ai:xtrace123@127.0.0.1:5432/observe
